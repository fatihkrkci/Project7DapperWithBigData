@{
    ViewData["Title"] = "Top5Lists";
    Layout = "~/Views/Shared/_DapperWithBigDataLayout.cshtml";
}

<h1>Listeler</h1>

<div class="row page-titles mx-0">
    <div class="col-sm-12">
        <div class="welcome-text">
            <h4>Top 5 Listeleri</h4>
            <p class="mb-0">Bu sayfada bulunan listeler aracılığıyla 4.237.752 satırlık araç kayıtlarının istatistiksel verilerini inceleyebilirsiniz.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">En Çok Tercih Edilen 5 Araba Markası</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-responsive-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Marka</th>
                                <th>Araç Sayısı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter1 = 0;
                            }
                            @foreach (var item in ViewBag.Top5Brands)
                            {
                                counter1++;
                                <tr>
                                    <th>@counter1</th>
                                    <td>@item.BRAND</td>
                                    <td>@item.VehicleCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
